{
  "name": "turbo-fullstack-starter",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "clean": "git clean -xdf node_modules",
    "db:check": "turbo db:check",
    "db:generate": "turbo db:generate",
    "db:migrate": "turbo db:migrate",
    "db:seed": "turbo db:seed",
    "db:studio": "turbo db:studio",
    "dev": "turbo dev --parallel",
    "docker:build": "turbo docker:build",
    "docker:run:backend": "turbo docker:run:backend",
    "format": "prettier -uw --cache .",
    "format:check": "prettier -uc --cache .",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "pnpm lint:ws",
    "lint": "turbo lint --continue -- --cache --cache-location node_modules/.cache/.eslintcache",
    "lint:fix": "turbo lint --continue -- --fix --cache --cache-location node_modules/.cache/.eslintcache",
    "lint:ws": "pnpm dlx sherif@latest",
    "prepare": "is-ci || husky",
    "preview": "turbo preview",
    "start": "turbo start",
    "typecheck": "turbo typecheck"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git",
      "czConfig": "./.commitlintrc.cjs"
    }
  },
  "devDependencies": {
    "cz-git": "^1.9.0",
    "husky": "^9.0.11",
    "is-ci": "^3.0.1",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "prettier-plugin-packagejson": "^2.4.12",
    "turbo": "^1.12.4",
    "typescript": "^5.3.3",
    "wrangler": "^3.31.0"
  },
  "packageManager": "pnpm@8.15.4"
}
