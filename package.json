{
  "name": "turbo-starter",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "format": "prettier -uw --cache .",
    "format:check": "prettier -uc --cache .",
    "lint": "turbo lint",
    "prepare": "is-ci || husky"
  },
  "lint-staged": {
    "*": "prettier -uw"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git",
      "czConfig": "./.commitlintrc.cjs"
    }
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "cz-git": "^1.8.0",
    "husky": "^9.0.11",
    "is-ci": "^3.0.1",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "prettier-plugin-packagejson": "^2.4.11",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.15.3",
  "engines": {
    "node": ">=20.11.0"
  }
}
